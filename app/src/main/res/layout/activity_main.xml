<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".android.activities.MainActivity">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnBtcEur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BTC/EUR"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp" />

            <Button
                android:id="@+id/btnEthEur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ETH/EUR"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp" />

            <Button
                android:id="@+id/btnXrpEur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XRP/EUR"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp" />

            <Button
                android:id="@+id/btnXrpBtc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XRP/BTC"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="2dp" />
        </LinearLayout>
    </HorizontalScrollView>

    <com.github.mikephil.charting.charts.CandleStickChart
        android:id="@+id/xrpEurChart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/chart_background"
        app:layout_constraintBottom_toTopOf="@+id/xrpEurText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView"
        app:layout_constraintVertical_bias="0.0">
    </com.github.mikephil.charting.charts.CandleStickChart>

    <TextView
        android:id="@+id/xrpEurText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/crypto_price"
        app:layout_constraintBottom_toTopOf="@+id/btcEurText"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/btcEurText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/crypto_price"
        app:layout_constraintBottom_toTopOf="@+id/xrpBtcText"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/xrpBtcText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/crypto_price"
        app:layout_constraintBottom_toTopOf="@+id/xrpBtcEurText"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/xrpBtcEurText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/crypto_price"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickRefreshChart"
        android:text="Refresh chart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/alarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="@string/alarms"
        app:layout_constraintBottom_toBottomOf="@+id/lowerThan"
        app:layout_constraintEnd_toStartOf="@+id/switchHigherThan"
        app:layout_constraintTop_toTopOf="@+id/higherThan" />

    <EditText
        android:id="@+id/higherThan"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:ems="7"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:padding="0dp"
        android:text="1.50"
        android:textColor="@color/candlestick_increasing"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/xrpEurChart"
        app:layout_constraintWidth_percent="0.25" />

    <EditText
        android:id="@+id/lowerThan"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:ems="7"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:padding="0dp"
        android:text="1.00"
        android:textColor="@color/candlestick_decreasing"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/higherThan"
        app:layout_constraintWidth_percent="0.25" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchHigherThan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/higher_than"
        app:layout_constraintBottom_toBottomOf="@+id/higherThan"
        app:layout_constraintEnd_toStartOf="@+id/higherThan"
        app:layout_constraintTop_toTopOf="@+id/higherThan" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchLowerThan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lower_than"
        app:layout_constraintBottom_toBottomOf="@+id/lowerThan"
        app:layout_constraintEnd_toStartOf="@+id/lowerThan"
        app:layout_constraintTop_toTopOf="@+id/lowerThan" />

</androidx.constraintlayout.widget.ConstraintLayout>