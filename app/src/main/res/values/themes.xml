<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BinanceApi" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/binance_secondary</item>
        <item name="colorPrimaryVariant">@color/binance_secondary</item>
        <item name="colorOnPrimary">@color/binance_primary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/binance_secondary</item>
        <item name="colorSecondaryVariant">@color/binance_secondary</item>
        <item name="colorOnSecondary">@color/binance_primary</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondary</item>

        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
        <item name="android:colorBackground">@color/background</item>
    </style>
</resources>